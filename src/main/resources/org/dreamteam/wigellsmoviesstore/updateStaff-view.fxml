<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.dreamteam.wigellsmoviesstore.Controllers.UpdateStaffController"
           prefHeight="400.0" prefWidth="600.0"
           stylesheets="@styles/styles.css">
    <VBox styleClass="background">
        <padding>
            <Insets topRightBottomLeft="10"/>
        </padding>
    <VBox styleClass="body">
        <HBox styleClass="header">
            <Label fx:id="topLabel" text="Uppdatera medarbetare"/>
        </HBox>
        <HBox styleClass="boxes">
            <VBox>
                <TextField promptText="Förnamn"/>
                <TextField promptText="Efternamn"/>
                <TextField promptText="Email"/>
                <TextField promptText="Telefonnummer"/>
                <TextField promptText="Användarnamn"/>
                <PasswordField promptText="Lösen"/>
                <PasswordField promptText="Upprepa Lösen"/>
                <Button text="Spara medarbetare"/>
            </VBox>
            <VBox>
                <TextField promptText="Adress"/>
                <TextField promptText="Adress"/>
                <TextField promptText="Distrikt"/>
                <TextField promptText="Postkod"/>
                <TextField promptText="Stad"/>
                <TextField promptText="Land"/>
                <Button text="Ladda upp bild" onAction="#onUploadPictureButtonClick"/>
                <ImageView fx:id="imageView"/>
            </VBox>
        </HBox>
    <Button text="Tillbaka" onAction="#onBackButtonClick"/>
    </VBox>
    </VBox>
</StackPane>
