<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.dreamteam.wigellsmoviesstore.Controllers.MovieViewController"
            prefHeight="400.0" prefWidth="600.0"
            stylesheets="@styles/styles.css">
    <VBox styleClass="background">
        <VBox styleClass="body">
        <HBox styleClass="header">
            <Label fx:id="topLabel" text="Sök filmer" style="-fx-font-size: 20"/>
        </HBox>
        <VBox styleClass="boxes">
        <HBox styleClass="hboxes">
            <TextField fx:id="searchField" promptText="Artikelnummer"/>
            <Button text="OK" onAction="#onSearchByIdButton"/>
            <Button text="Ny film" onAction="#onNewFilmButton"/>
        </HBox>
        <HBox styleClass="hboxes">
            <VBox maxWidth="100">
                <Label text="Titel"/>
                <Label text="Hyrpris"/>
                <Label text="Ersättningspris"/>
                <Label text="Kategori"/>
            </VBox>
            <VBox maxWidth="100">
                <Label fx:id="titleLabel"/>
                <Label fx:id="rentalCostLabel"/>
                <Label fx:id="replacementFeeLabel"/>
                <Label fx:id="categoryLabel"/>
            </VBox>
            <VBox maxWidth="100">
                <Label text="Skådespelare" styleClass="choiceboxLabel"/>
                <Label text="Release"/>
                <Label text="Språk"/>
                <Label text="Längd"/>
            </VBox>
            <VBox maxWidth="100">
                <ChoiceBox fx:id="actorBox" minWidth="150"/>
                <Label fx:id="releaseLabel"/>
                <Label fx:id="languageLabel"/>
                <Label fx:id="lengthLabel"/>
            </VBox>
        </HBox>
            <Button text="Uppdatera information" onAction="#onUpdateFilmButton"/>
        </VBox>
            <VBox styleClass="boxes">
                <Button text="Se alla" onAction="#onSearchAllButton"/>
                <HBox fx:id="filterBox" alignment="CENTER" spacing="10">
                    <TextField fx:id="filterField" promptText="Namnfilter"/>
                    <Button text="Filtrera på namn" onAction="#onFilterByNameButton"/>
                </HBox>
                <TableView fx:id="movieTable" maxWidth="300" maxHeight="200">
                    <columns>
                        <TableColumn fx:id="idColumn" text="Id"/>
                        <TableColumn fx:id="titleColumn" text="Titel" minWidth="150"/>
                        <TableColumn fx:id="categoryColumn" text="Kategori"/>
                        <TableColumn fx:id="languageColumn" text="Språk"/>
                    </columns>
                </TableView>
            </VBox>

        <HBox>
        <Button text="Tillbaka" onAction="#onBackButtonClick"/>
        </HBox>
        </VBox>
    </VBox>
</StackPane>
