<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<StackPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.dreamteam.wigellsmoviesstore.Controllers.UpdateFilmController"
            prefHeight="400.0" prefWidth="600.0"
            stylesheets="@styles/styles.css">
<VBox styleClass="background">
  <VBox styleClass="body">
      <HBox styleClass="header">
          <Label fx:id="topLabel" text="Uppdatera film" style="-fx-font-size: 20px"/>
      </HBox>
      <VBox styleClass="boxes">
          <HBox>
              <VBox spacing="2">
                  <TextField fx:id="title" promptText="Titel"/>
                  <TextField fx:id="description" promptText="Beskrivning"/>
                  <TextField fx:id="releaseYear" promptText="Utgivningsår"/>
                  <ChoiceBox fx:id="languageBox" value="Språk" minWidth="120"/>
                  <ChoiceBox fx:id="originalLanguageBox" value="OriginalSpråk" minWidth="120"/>
                  <ChoiceBox fx:id="ratingBox" value="Rating" minWidth="120"/>
                  <ChoiceBox fx:id="categoryBox" value="Kategori" minWidth="120"/>
              </VBox>
              <VBox spacing="2">
                  <TextField fx:id="rentalDuration" promptText="Hyrperiod dagar"/>
                  <TextField fx:id="length" promptText="Längd (minuter)"/>
                  <TextField fx:id="replacementCost" promptText="Ersättningskostnad"/>
                  <TextField fx:id="rentalRate" promptText="Hyrkostnad"/>
                  <CheckBox fx:id="behindTheScenes" text="Behind The Scenes"/>
                  <CheckBox fx:id="deletedScenes" text="Deleted Scenes"/>
                  <CheckBox fx:id="trailers" text="Trailers"/>
                  <CheckBox fx:id="commentaries" text="Kommentarer"/>
              </VBox>
          </HBox>
          <Button text="Spara uppdatering" onAction="#onSaveButtonClick"/>
          <TextField fx:id="userNotice" visible="false"/>
      </VBox>
      <Button text="Tillbaka" onAction="#onBackButtonClick"/>
  </VBox>
</VBox>
</StackPane>
